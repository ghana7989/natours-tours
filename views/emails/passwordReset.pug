extends baseEmail

block content
  p Hi #{firstName},
    p Forgot your password? Submit your new credentials here: #{url}
    p (Website For this action not available)
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
      tbody
        tr
          td(align='left')
            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
              tbody
                tr
                  td
                    a(href=`${url}`, target='_blank') Reset Your Password
    p If you didn't asked for reset password simply ignore this email.